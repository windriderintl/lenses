        <?php //maybe a better way of doing this maybe a getChildHtml('summary_');
    
        echo $this->getSummaryBlock($post)->toHtml(); 
        ?>
    </div>
    <?php endforeach; ?>
    <div class="toolbar"><?php echo $this->getPagerHtml(); ?></div>
<?php endif;?>