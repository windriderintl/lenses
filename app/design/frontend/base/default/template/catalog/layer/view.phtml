/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
<div class="block block-layered-nav">
    <div class="block-title">
        <strong><span><?php echo $this->__('Shop By') ?></span></strong>
    </div>
    <div class="block-content">
        <?php echo $this->getStateHtml() ?>
        <?php if ($this->getLayer()->getState()->getFilters()): ?>
            <div class="actions"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?></a></div>
        <?php endif; ?>
        <?php if($this->canShowOptions()): ?>
            <p class="block-subtitle"><?php echo $this->__('Shopping Options') ?></p>
            <dl id="narrow-by-list">
                <?php $_filters = $this->getFilters() ?>
				<?php $count = 0;?>
                <?php foreach ($_filters as $_filter): ?>
                <?php if($_filter->getItemsCount()): ?>
                    <dt style="margin-bottom: 2%;"><div style="float: left;width: 90%;cursor: pointer;" onclick="showDrillView('<?php echo $count ?>')"><?php echo $this->__($_filter->getName()) ?></div>
                    	 <img id="imgDiv<?php echo $count ?>" src="<?php echo $this->getSkinUrl('images/down-arrow.png') ?>" onclick="showDrillView('<?php echo $count ?>')" style="width: 6%; cursor: pointer;" />
                    	<!-- <p id="arrows" style="float: right;" onclick="showDrillView('<?php echo $count ?>')"> &#9660; </p>-->
                    </dt>
                    <dd id="optionDiv<?php echo $count ?>" style="display: none;"><?php echo $_filter->getHtml() ?></dd>
					<?php $count++; ?>
                <?php endif; ?>
                <?php endforeach; ?>
            </dl>
            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
        <?php endif; ?>
    </div>
</div>
<?php endif; ?>
<script type="text/javascript">

	function showDrillView(element){
		//alert("in showDrillView .........."+'#optionDiv'+element);
	    //9650 ; 9660
		var val1 = '#optionDiv'+element;
		var val2 = '#imgDiv'+element;
		//alert(jQuery(val2).attr('src'));
		var isVisible = jQuery(val1).is(':visible');
		if(isVisible){
			jQuery(val1).hide();
			jQuery(val2).attr('src','http://chouetteslunettes.com/skin/frontend/base/default/images/down-arrow.png' );
		}else{
			jQuery(val1).show();
			jQuery(val2).attr('src','http://chouetteslunettes.com/skin/frontend/base/default/images/up-arrow.png' );
		}
		//alert("val1 is " + isVisible);
	}
</script>